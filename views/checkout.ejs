<div >
  <form>
    <div class="form-container">
      <div >
        <h1>Payment Information</h1>
      </div> <!-- end of personal-information -->
      <input id="input-field" class="form-control" name="streetaddress" required="required" autocomplete="on" maxlength="45" placeholder="Streed Address"/>

      <input id="column-left" class="form-control" name="city" required="required" autocomplete="on" maxlength="20" placeholder="City"/>

      <input id="column-right" class="form-control" name="zipcode" required="required" autocomplete="on" pattern="[0-9]*" maxlength="5" placeholder="ZIP code"/>
      
      <input id="input-field" class="form-control" name="email" required="required" autocomplete="on" maxlength="40" placeholder="Email"/>
    
    <div class="card-wrapper"></div>
      <input id="column-left" class="form-control" name="first-name" placeholder="First Name"/>
      
      <input id="column-right" class="form-control" name="last-name" placeholder="Surname"/>
      
      <input id="input-field" class="form-control" class="form-control" name="number" placeholder="Card Number"/>
     
      <input id="column-left" class="form-control" name="expiry" placeholder="MM / YY"/>
        
      <input id="column-right" class="form-control" name="cvc" placeholder="CCV"/>
    
      <input  class="btn btn-primary" value="Submit"/>
