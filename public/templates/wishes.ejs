
<div>
<div class="col-md-3 well">
<form>
	<h3>Price</h3>
	   <rzslider rz-slider-model="slider.minValue"
	          rz-slider-high="slider.maxValue"
	          rz-slider-options="slider.options">
	   </rzslider>   
	<div>
	<hr>
	<h3>Age</h3>
	         <div class="row">
	          <input type = "checkbox"
	                 name = "radSize"
	                 id = "zerofive"
	                 value = "0-5"
	                 checked = "checked" />
			  <label for = "zerofive">0-5</label>
			 </div>
			 </br>
			 <div class="row">
	          <input type = "checkbox"
	                 name = "radSize"
	                 id = "fiveten"
	                 value = "5-10" />
	         <label for = "fiveten">5-10</label>
	         </div>
	         </br>
	         <div class="row">
	          <input type = "checkbox"
	                 name = "radSize"
	                 id = "elevenfifteen"
	                 value = "11-15" />
	          <label for = "elevenfifteen">11-15</label>
	        </div>
	</div>
	 <hr>
	<h3>Gender</h3>         
	          <input type = "radio"
	                 name = "radSize"
	                 id = "girl"
	                 value = "Girl"
	                 checked = "checked" 
	                 />
	          <label for = "girl">Girl</label>
	          
	          <input type = "radio"
	                 name = "radSize"
	                 id = "boy"
	                 value = "Boy" 
	                />
	          <label for = "boy">Boy</label>
	  <button type="button" ng-click="filterResults()">Go</button>
 </form>
</div>
<div class="col-md-9">
    <div ng-repeat="data in items" class="col-md-4" ng-model="wishlist">
    <div id="product-box" class="well">
    	<div id ="individual-products" style="width:100%;height:230px;border:1px solid ;border-radius: 15px; background-color:#ffffff; well" >
    	     <input id="hiddenattr" type="hidden" value="{{($index+1)%9}}" ;>
		     <div class="col-md-6" style="width:100%;height:30%" >
			    <div class="block">
		    		<label>Name</label>
		    		{{data.FirstName}}
				</div>
				 <div class="block">
		    		<label>Age:</label>
		    		 {{data.CardAge}}
				</div>
				  <div class="block" >
		    		<label>Price: </label>
		    		{{data.Price}}
				</div>
				 <div class="block" >
		    		<label>Description: </label>
		    		{{data.GiftDescription}}
				</div>
		     </div>
		     <div class="col-md-6">
		      <img src={{data.ImageURL}} style="width:150%;height:100%"/>
		     </div>
	    </div>
	    <br>
	    <div>
	     <button type="button" ng-click="flag=!flag; addToCart($index,flag)"  id="{{$index}}" ng-init="status='Fulfill this Wish'; flag=true" ng-class="{'btn btn-primary btn-xs': flag, 'btn btn-danger btn-xs': !flag}">{{flag? 'Fulfill this Wish' : 'Not this Wish'}}</button>
	    </div>
	    
	    
    </div>
 </div>    


</div>
